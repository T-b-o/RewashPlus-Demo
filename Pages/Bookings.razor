@page "/bookings"
@page "/my-bookings"

<!--
  Bookings.razor
  ----------------
  A modern, responsive bookings list with search and status badges.
  - Uses TailwindCSS for styling
  - Code-behind: Pages/Bookings.razor.cs (partial class Bookings)
  - Routes: /bookings and /my-bookings
-->

<div class="p-4 sm:p-6 space-y-6">
    <!-- Header + Search -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h1 class="text-2xl font-bold text-gray-800">Bookings</h1>

        <div class="relative w-full sm:w-80">
            <input type="text"
                   class="w-full rounded-lg border border-gray-300 pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   placeholder="Search by customer or ID..."
                   @bind="SearchTerm"
                   @bind:event="oninput" />
            <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Booking ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>

            <tbody class="bg-white divide-y divide-gray-200">
                @if (!FilteredBookings.Any())
                {
                    <tr>
                        <td colspan="6" class="px-6 py-6 text-center text-sm text-gray-500">
                            No bookings found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var booking in FilteredBookings)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">@booking.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@booking.CustomerName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@booking.Date.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">@booking.Time</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="@GetStatusBadgeClass(booking.Status)">@booking.Status</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                                <button class="inline-flex items-center px-3 py-1 rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition"
                                        @onclick="() => ViewBooking(booking.Id)">
                                    <i class="fas fa-eye mr-2"></i> View
                                </button>
                                <button class="inline-flex items-center px-3 py-1 rounded-lg bg-yellow-500 text-white hover:bg-yellow-600 transition"
                                        @onclick="() => EditBooking(booking.Id)">
                                    <i class="fas fa-pen mr-2"></i> Edit
                                </button>
                                <button class="inline-flex items-center px-3 py-1 rounded-lg bg-red-500 text-white hover:bg-red-600 transition"
                                        @onclick="() => CancelBooking(booking.Id)">
                                    <i class="fas fa-times mr-2"></i> Cancel
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
